{
  "name": "lilasia-ui",
  "private": false,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:lib && npm run build:web",
    "build:lib": "vue-tsc && vite build",
    "build:web": "vue-tsc && vite build --config vite-web.config.ts",
    "dev": "vite",
    "type-check": "vue-tsc",
    "lint": "eslint ./src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "npx prettier --write \"src/**/*.{vue,ts}\"",
    "preview": "vite preview --config vite-web.config.ts"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/lilasia-ui.umd.cjs",
  "module": "./dist/lilasia-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/lilasia-ui.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/lilasia-ui.umd.cjs"
      }
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.14.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "lilasia-icons": "^0.1.1",
    "pinia": "^2.1.7",
    "postcss": "^8.4.38",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vue": "^3.4.27",
    "vue-router": "^4.3.3",
    "vue-tsc": "^2.0.6"
  },
  "peerDependencies": {
    "@headlessui/vue": "^1.7.22",
    "@tiptap/extension-placeholder": "^2.5.6",
    "@tiptap/pm": "^2.5.6",
    "@tiptap/starter-kit": "^2.5.6",
    "@tiptap/vue-3": "^2.5.6",
    "lilasia-icons": "^0.1.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.0"
  }
}
